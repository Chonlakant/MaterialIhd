<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">#00695C</item>
        <item name="colorPrimary">#C00000</item>
        <item name="colorAccent">#FFD54F</item>

        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.Yts.SearchView" parent="Widget.AppCompat.SearchView" />

    <style name="Widget.Yts.Movie.Detail.Plot" parent="android:Widget">
        <item name="android:ellipsize">end</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="collapsed_maxLines">@integer/default_plot_maxlines</item>
    </style>

    <style name="Widget.Yts.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Widget.Yts.Toolbar.Transparent" parent="Widget.Yts.Toolbar">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">?actionBarIconColor</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="TabIndicator" />

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">@dimen/headerbar_elevation</item>
    </style>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_color_default</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="TextAppearance.Subhead">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Caption.Dim">
        <item name="android:textColor">@color/text_dim</item>
    </style>

</resources>